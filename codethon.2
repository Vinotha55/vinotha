#include <stdio.h>


int add(int, int);
int subtract(int, int);
int multiply(int, int);
int divide(int, int);

int main() {

    int (*operation)(int, int);

    int a = 10, b = 5;
    int choice;


    printf("Enter an operation (1: Add, 2: Subtract, 3: Multiply, 4: Divide): ");
    scanf("%d", &choice);


    switch(choice) {
        case 1:
            operation = add;
            break;
        case 2:
            operation = subtract;
            break;
        case 3:
            operation = multiply;
            break;
        case 4:
            operation = divide;
            break;
        default:
            printf("Invalid choice.\n");
            return 1;
    }


    printf("Result: %d\n", operation(a, b));

    return 0;
}


int add(int x, int y) {
    return x + y;
}

int subtract(int x, int y) {
    return x - y;
}

int multiply(int x, int y) {
    return x * y;
}

int divide(int x, int y) {
    if (y != 0) {
        return x / y;
    } else {
        printf("Error: Division by zero!\n");
        return 0;
    }
}

