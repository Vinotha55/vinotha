#include<stdio.h>
int main()
{
    int a[2][2],b[2][2],c[2][2],i,j;
    for(i=0;i<2;i++)
    {
        for(j=0;j<2;j++)
        {
        printf("Enter the number");
        scanf("%d",&a[i][j]);
        }
    }
    for(i=0;i<2;i++)
    {
        for(j=0;j<2;j++)
    {
        printf("Enter the number");
        scanf("%d",&b[i][j]);
    }
    }
    for(i=0;i<2;i++)
    {
        for(j=0;j<2;j++)
        {
            
            c[i][j]=a[i][j]+b[i][j];
        }
    }
    printf("The output is :");
    for(i=0;i<2;i++)
    {
        for(j=0;j<2;j++)
        {
            printf("\nNumber of c[%d][%d] is %d",i,j,c[i][j]);
        }
    }
    return 0;
}


